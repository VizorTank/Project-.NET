@page
@model Project_.NET.Pages.AddIngiedientModel
@{
    ViewData["Title"] = "Dodawanie Składników";
}
<div class="form-group">
    <form method="post">
        <div class="form-group">
            <small> <span asp-validation-for="IngriedientName" class="text-danger">@Model.ErrorMessage</span> <br /></small>
            <label for="CategoryName">Nazwa Kategorii:</label><br />
            @if (Model.IngriedientName != null && Model.IngriedientName != "")
            {
                <input name="IngriedientName" value="@Model.IngriedientName" readonly /><br />
            }
            else
            {
                <input name="IngriedientName" /><br />
            }
        </div>
        <div class="form-group">
            <small> <span asp-validation-for="Description" class="text-danger"></span> <br /></small>
            <label for="Description">Opis kategorii</label>
            <textarea name="Description" class="form-control" id="Description" rows="5">@Model.Description</textarea>
        </div>
        <button type="submit" class="btn btn-primary" asp-page-handler="Add">Zatwierdź</button><br />
    </form>
</div>