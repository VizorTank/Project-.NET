@page
@model Project_.NET.Pages.Shared.Recipes2Model
@{
    ViewData["Title"] = "Lista Przepisów";



    <div class="card-columns">
        @foreach (var item in Model.RP)
        {
            <div class="card">
                <div class="card-img" style="        background-image: url('@item.Img');
        height: 254px;
        width: 500px;
" ></div>
                <div class="card-body">
                    <p class="card-text">
                        Autor: @item.User_Id
                        <br />
                        Nazwa: @item.Name
                        <br />
                        Data: @item.date <br />
                        <button type="submit" class="btn btn-success">+</button>
                        <button type="submit" class="btn btn-danger">-</button>
                       
                        <button type="submit" class="btn btn-secondary">Ulubione</button>

                    </p>
                </div>
            </div>



        }
    </div>

}
