@page
@model Project_.NET.Pages.SearchModel
@{
    ViewData["Title"] = "Wyszukaj";
}
<div class="form-group">
    <form method="post" enctype="multipart/form-data">
        <div class="form-group">
            <small> <span asp-validation-for="UserName" class="text-danger"></span></small>
            <label for="UserName">Nazwa Użytkownika:</label><br />
            <input name="UserName" />
            <button type="submit" class="btn btn-success" asp-page-handler="User">Szukaj</button>
        </div>
        <div class="form-group">
            <small> <span asp-validation-for="RecipeName" class="text-danger"></span></small>
            <label for="RecipeName">Nazwa Dania:</label><br />
            <input name="RecipeName" />
            <button type="submit" class="btn btn-success" asp-page-handler="Recipe">Szukaj</button>
        </div>
        <div class="form-group">
            <label asp-for="CategoryName">Category:</label>
            <select class="form-control" name="CategoryName">
                <option></option>
                @foreach (var item in Model.GetCategories())
                {
                    <option>@item.Name</option>
                }
            </select>
            <button type="submit" class="btn btn-success" asp-page-handler="Category">Szukaj</button>
        </div>
    </form>
</div>
@Model.ToolTip <br />

<partial name="_Recipe" />
